@model UAIBay.WebSite.ViewModel.CategoriaViewModels

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="colorNaranja">@UAIBay.WebSite.Resources.Recurso.ActualizarCategoria</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            <div class="col-md-10">
                @Html.HiddenFor(model => model.IdCategoria)
                @Html.ValidationMessageFor(model => model.IdCategoria)
            </div>
        </div>

        <div class="form-group">
            @Html.Label(@UAIBay.WebSite.Resources.Recurso.Nombre, new { @class = "control-label col-md-2", @id = "colorNaranja" })
            <div class="col-md-10">
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-info"></i>
                    </span>
                    @Html.TextBoxFor(x => x.Nombre, new { @placeholder = @UAIBay.WebSite.Resources.Recurso.Nombre, @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(model => model.Nombre)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-default add-to-cart" data-toggle="tooltip" title="@UAIBay.WebSite.Resources.Recurso.Guardar"><i class="fa fa-fw fa-check"></i></button>
                <a href="@Url.Action("Index","Categoria")" class="btn btn-default add-to-cart" data-toggle="tooltip" title="@UAIBay.WebSite.Resources.Recurso.Volver"><i class="fa fa-fw fa-arrow-left"></i></a>
            </div>
        </div>
    </div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
