@model UAIBay.WebSite.ViewModel.PromocionViewModels

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="colorNaranja">Actualizar promocion</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            <div class="col-md-10">
                @Html.HiddenFor(model => model.CodPromocion)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Numero", new { @class = "control-label col-md-2", @id = "colorNaranja" })
            <div class="col-md-10">
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-info"></i>
                    </span>
                    @Html.TextBoxFor(x => x.Nro, new { @placeholder = "Numero", @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(model => model.Nro)
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Descuento", new { @class = "control-label col-md-2", @id = "colorNaranja" })
            <div class="col-md-10">
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-dollar"></i>
                    </span>
                    @Html.TextBoxFor(x => x.Descuento, new { @placeholder = "Descuento", @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(model => model.Descuento)
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Fecha de vencimiento", new { @class = "control-label col-md-2", @id = "colorNaranja" })
            <div class="col-md-10">
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-calendar"></i>
                    </span>
                    @Html.TextBoxFor(x => x.FechaVencimiento , new { @placeholder = "Fecha de vencimiento", @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(model => model.FechaVencimiento)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-default add-to-cart" data-toggle="tooltip" title="@UAIBay.WebSite.Resources.Recurso.Guardar"><i class="fa fa-fw fa-check"></i></button>
                <a href="@Url.Action("Index","Promocion")" class="btn btn-default add-to-cart" data-toggle="tooltip" title="@UAIBay.WebSite.Resources.Recurso.Volver"><i class="fa fa-fw fa-arrow-left"></i></a>
            </div>
        </div>
    </div>
}

