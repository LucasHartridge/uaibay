@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form">
                    <!--login form-->
                    <h2>@UAIBay.WebSite.Resources.Recurso.IniciaSesion</h2>
                    <form action="#">
                        <input type="email" placeholder="@UAIBay.WebSite.Resources.Recurso.Email" />
                        <input type="password" placeholder="@UAIBay.WebSite.Resources.Recurso.Contraseña" />
                        <button type="submit" class="btn btn-default">@UAIBay.WebSite.Resources.Recurso.IniciarSesion</button>
                    </form>
                </div><!--/login form-->
            </div>
            <div class="col-sm-1">
                <h2 class="or">O</h2>
            </div>
            <div class="col-sm-4">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2>@UAIBay.WebSite.Resources.Recurso.Registrarse</h2>
                    <form action="#">
                        <input type="text" placeholder="@UAIBay.WebSite.Resources.Recurso.Nombre" />
                        <input type="text" placeholder="@UAIBay.WebSite.Resources.Recurso.Apellido" />
                        <input type="text" placeholder="DNI" />
                        <input type="password" placeholder="@UAIBay.WebSite.Resources.Recurso.Contraseña" />
                        <input type="password" placeholder="@UAIBay.WebSite.Resources.Recurso.RepetirContraseña" />
                        <input type="text" placeholder="@UAIBay.WebSite.Resources.Recurso.Telefono" />
                        <input type="email" placeholder="@UAIBay.WebSite.Resources.Recurso.Email" />
                        <select>
                            <option>@UAIBay.WebSite.Resources.Recurso.Masculino</option>
                            <option>@UAIBay.WebSite.Resources.Recurso.Femenino</option>
                        </select>
                        <br />
                        <br />
                        <button type="submit" class="btn btn-default">@UAIBay.WebSite.Resources.Recurso.Registrese</button>
                    </form>
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section><!--/form-->

