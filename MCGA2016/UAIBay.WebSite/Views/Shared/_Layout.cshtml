@{
    Layout = null;
    HttpCookie cookie = HttpContext.Current.Request.Cookies["Lenguaje"];

    var bllcat = new UAIBay.BLL.DTO.dtoCategoria();
    var categoriasDTO = bllcat.TraerCategorias();

    UAIBay.WebSite.App_Start.AutoMapperWebConfiguration.Configure();

    var categoriasViewmodel = AutoMapper.Mapper.Map<List<UAIBay.WebSite.ViewModel.CategoriaViewModels>>(categoriasDTO);
    ViewBag.CategoriasLayout = categoriasViewmodel;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Es una pagina de venta de productos que realiza envios a toda Argentina de manera gratuita y que ofrece un servicio de pago en cuotas. Posee multilenguaje(Español,Ingles y Frances)">
    <meta name="author" content="Los 4 fantasticos">

    <title>UAIBay</title>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>*@

    <script src="https://api.mondido.com/v1/mondido.js?rnd=1&merchant_id=3"> </script>
    <script src="https://s3-eu-west-1.amazonaws.com/mondido/www/js/validator.js"> </script>
    <script src="https://blueimp.github.io/JavaScript-MD5/js/md5.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js" type="text/javascript"></script>

    <link href="~/Content/bootstrap-fileinput/css/fileinput.css" rel="stylesheet" />
    <script src='https://www.google.com/recaptcha/api.js'></script>
    <script src="~/Content/js/fileinput.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/animate.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/main.css" rel="stylesheet" />
    <link href="~/Content/prettyPhoto.css" rel="stylesheet" />
    <link href="~/Content/price-range.css" rel="stylesheet" />
    <link href="~/Content/responsive.css" rel="stylesheet" />
    <link rel="shortcut icon" href="images/ico/favicon.ico">
    <link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/Content/images/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/Content/images/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/Content/images/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="~/Content/images/ico/apple-touch-icon-57-precomposed.png">
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/images/favicon/favicon32x32.ico" />
</head>
<body>
    <header id="header">
        <!--header-->
        <div class="header_top">
            <!--header_top-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="contactinfo">
                            <ul class="nav nav-pills">
                                <li><a href="#"><i class="fa fa-phone"></i> 011 4661-6986</a></li>
                                <li><a href="#"><i class="fa fa-envelope"></i> uaibay@hotmail.com</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="social-icons pull-right">
                            <ul class="nav navbar-nav">
                                <li><a href="https://es-es.facebook.com/uai.elfuturososvos" target="_blank"><i class="fa fa-facebook"></i></a></li>
                                <li><a href="https://twitter.com/uainow" target="_blank"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="https://ar.linkedin.com/edu/universidad-abierta-interamericana-10086" target="_blank"><i class="fa fa-linkedin"></i></a></li>
                                <li><a href="https://dribbble.com/" target=" _blank"><i class="fa fa-dribbble"></i></a></li>
                                <li><a href="https://plus.google.com/about?hl=es" target="_blank"><i class="fa fa-google-plus"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--/header_top-->

        <div class="header-middle">
            <!--header-middle-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="logo pull-left">
                            <a href="/Home/Index"><img src="~/Content/images/home/Logo.Pequeño.png" alt="Logo" /></a>
                        </div>
                        <div class="btn-group pull-right">
                            <div class="btn-group">


                                @if (cookie != null)
                                {
                                    if (cookie.Value == "en")
                                    {
                                        <button type="button" class="btn btn-default dropdown-toggle usa" data-toggle="dropdown">
                                            @UAIBay.WebSite.Resources.Recurso.Ingles
                                            <span class="caret"></span>
                                        </button>
                                    }
                                    else
                                    {
                                        if (cookie.Value == "es")
                                        {
                                            <button type="button" class="btn btn-default dropdown-toggle usa" data-toggle="dropdown">
                                                @UAIBay.WebSite.Resources.Recurso.Español
                                                <span class="caret"></span>
                                            </button>
                                        }
                                        else
                                            if (cookie.Value == "fr")
                                            {
                                                <button type="button" class="btn btn-default dropdown-toggle usa" data-toggle="dropdown">
                                                    @UAIBay.WebSite.Resources.Recurso.Frances
                                                    <span class="caret"></span>
                                                </button>
                                            }

                                    }
                                }
                                else
                                {
                                    <button type="button" class="btn btn-default dropdown-toggle usa" data-toggle="dropdown">
                                        @UAIBay.WebSite.Resources.Recurso.Español
                                        <span class="caret"></span>
                                    </button>
                                }


                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink(UAIBay.WebSite.Resources.Recurso.Ingles, "Change", "Language", new { LanguageAbbreviation = "en" }, null)</li>
                                    <li>@Html.ActionLink(UAIBay.WebSite.Resources.Recurso.Español, "Change", "Language", new { LanguageAbbreviation = "es" }, null)</li>
                                    <li>@Html.ActionLink(UAIBay.WebSite.Resources.Recurso.Frances, "Change", "Language", new { LanguageAbbreviation = "fr" }, null)</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <div class="shop-menu pull-right">
                            <ul class="nav navbar-nav">

                                @if (Session["LogedUserID"] == null)
                                {
                                    <li><a href="/Account/Login"><i class="fa fa-lock"></i> @UAIBay.WebSite.Resources.Recurso.Login</a></li>
                                }
                                else
                                {
                                    <li><a href="/Comprar/Carrito?userId=@Convert.ToInt32(Session["logeduserid"])"><i class="fa fa-shopping-cart"></i> @UAIBay.WebSite.Resources.Recurso.Carrito</a></li>
                                    <li><a href="/Account/MisCompras"><i class="glyphicon glyphicon-tags"></i>  @UAIBay.WebSite.Resources.Recurso.MisCompras</a></li>
                                    <li><a href="/Account/Cuenta"><i class="fa fa-user"></i> @Session["LogedUserNombre"].ToString()</a></li>
                                    <li><a href="/Account/Logout"><i class="fa fa-lock"></i>Logout</a></li>
                                }

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--/header-middle-->

        <div class="header-bottom">
            <!--header-bottom-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-9">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <div class="mainmenu pull-left">
                            <ul class="nav navbar-nav collapse navbar-collapse">
                                <li><a href="/Home/Index" class="active">@UAIBay.WebSite.Resources.Recurso.Inicio</a></li>
                                <li class="dropdown">
                                    <a href="#">@UAIBay.WebSite.Resources.Recurso.Tienda<i class="fa fa-angle-down"></i></a>
                                    <ul role="menu" class="sub-menu">
                                        <li><a href="/Comprar/Catalogo">@UAIBay.WebSite.Resources.Recurso.Catalogo</a></li>
                                    </ul>
                                </li>
                                <li class="dropdown">
                                    <a href="#">@UAIBay.WebSite.Resources.Recurso.AcercaDe<i class="fa fa-angle-down"></i></a>
                                    <ul role="menu" class="sub-menu">
                                        <li><a href="/Home/Contacto">@UAIBay.WebSite.Resources.Recurso.Contacto</a></li>
                                        <li><a href="/Home/NuestraInformacion">@UAIBay.WebSite.Resources.Recurso.Nuestrainformacion</a></li>
                                        <li><a href="/Home/FAQS">@UAIBay.WebSite.Resources.Recurso.FAQS</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                    @*@if (Session["LogedUserID"] != null)
                        {*@
                    <div class="col-sm-3">
                        <div class="search_box pull-right">
                            @using (Html.BeginForm("BuscarProducto", "Producto", FormMethod.Get, new { id = "fbuscar" }))
                            {
                                <input type="text" name="productoBuscar" id="productoBuscar" placeholder="@UAIBay.WebSite.Resources.Recurso.Buscar" />
                            }
                        </div>
                    </div>
                    @*}*@
                </div>
            </div>
        </div><!--/header-bottom-->
    </header><!--/header-->
    <section>
        <div class="container">
            @RenderBody()
        </div>
    </section>
    <footer id="footer">
        <!--Footer-->
        <div class="footer-widget">
            <div class="container">
                <div class="companyinfo">
                    <h2><span>uai</span>-bay</h2>
                    <p></p>
                </div>
                <div class="row">

                    <div class="col-sm-3">

                        <div class="single-widget">
                            <h2>@UAIBay.WebSite.Resources.Recurso.Catalogo</h2>
                            <ul class="nav nav-pills nav-stacked">
                                @foreach (UAIBay.WebSite.ViewModel.CategoriaViewModels item in ViewBag.CategoriasLayout)
                                {
                                    <li><a href="@Url.Action("FiltrarPorCategoria", "Producto", new { idCategoria = item.IdCategoria })">@item.Nombre</a></li>
                                }

                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="single-widget">
                            <h2>@UAIBay.WebSite.Resources.Recurso.AcercaDe</h2>
                            <ul class="nav nav-pills nav-stacked">
                                <li><a href="/Home/NuestraInformacion">@UAIBay.WebSite.Resources.Recurso.Nuestrainformacion</a></li>
                                <li><a href="/Home/FAQS">@UAIBay.WebSite.Resources.Recurso.FAQS</a></li>
                                <li><a href="/Home/Contacto">@UAIBay.WebSite.Resources.Recurso.Contacto</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="single-widget">
                            <h2>@UAIBay.WebSite.Resources.Recurso.NuestrasNovedadesTitulo</h2>
                            <form action="#" class="searchform">
                                <input type="text" placeholder="Email" />
                                <button type="submit" class="btn btn-default"><i class="fa fa-arrow-circle-o-right"></i></button>
                                <p>@UAIBay.WebSite.Resources.Recurso.NuestrasNovedadesParrafo</p>
                            </form>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="address">
                            <img src="~/Content/images/home/map.png" alt="Mapa" />
                            <p>3550 Arias,Castelar,Buenos Aires,Argentina</p>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="footer-bottom">
            <div class="container">
                <div class="row">
                    <p class="pull-left">@UAIBay.WebSite.Resources.Recurso.Copyright</p>
                    <p class="pull-right">@UAIBay.WebSite.Resources.Recurso.Diseñado</p>
                </div>
            </div>
        </div>

    </footer><!--/Footer-->
    @RenderSection("scripts", required: false)
    <script src="~/Content/js/jquery.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/jquery.scrollUp.min.js"></script>
    <script src="~/Content/js/price-range.js"></script>
    <script src="~/Content/js/jquery.prettyPhoto.js"></script>
    <script src="~/Content/js/main.js"></script>
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
