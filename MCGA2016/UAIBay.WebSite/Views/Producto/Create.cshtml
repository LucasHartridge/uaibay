@model UAIBay.WebSite.ViewModel.ProductoViewModels


@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Nuevo producto</h2>


@using (Html.BeginForm("Create", "Producto", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.Label("Descripción", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Descripcion)
                @Html.ValidationMessageFor(model => model.Descripcion)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Cantidad", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Cantidad)
                @Html.ValidationMessageFor(model => model.Cantidad)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Precio de compra", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PrecioCompra)
                @Html.ValidationMessageFor(model => model.PrecioCompra)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Precio de venta", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PrecioVenta)
                @Html.ValidationMessageFor(model => model.PrecioVenta)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Categoría", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.IdCategoria, ViewBag.Categorias as List<SelectListItem>, "Seleccionar", new { @class = "control-label col-md-2" })
                @Html.ValidationMessageFor(model => model.IdCategoria)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(x=> x.Imagen, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" id="file" name="file" size="23" accept="image/*" />
                @Html.ValidationMessageFor(model => model.Imagen)
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
